{
    "app-id" : "org.gnome.SimpleScan",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "master",
    "sdk" : "org.gnome.Sdk",
    "command" : "simple-scan",
    "tags" : [
        "devel"
    ],
    "desktop-file-name-prefix" : "(Development) ",
    "finish-args" : [
        "--device=dri",
        "--device=all",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--talk-name=org.freedesktop.ColorManager"
    ],
    "cleanup" : [
        "/include",
        "/share/aclocal",
        "/man",
        "/share/man",
        "/share/gtk-doc",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "libusb1",
            "buildsystem" : "autotools",
            "config-opts" : [
                "--disable-udev"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/libusb/libusb.git"
                }
            ]
        },
        {
            "name" : "gusb",
            "buildsystem" : "meson",
            "config-opts" : [
                "-Ddocs=false",
                "-Dtests=false"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "branch" : "main",
                    "url" : "https://github.com/hughsie/libgusb.git"
                }
            ]
        },
        {
            "name" : "sane-backends",
            "buildsystem" : "autotools",
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://gitlab.com/sane-project/backends/uploads/8bf1cae2e1803aefab9e5331550e5d5d/sane-backends-1.0.31.tar.gz",
                    "sha256" : "4a3b10fcb398ed854777d979498645edfe66fcac2f2fd2b9117a79ff45e2a5aa"
                }
            ]
        },
        {
            "name" : "simple-scan",
            "buildsystem" : "meson",
            "builddir" : true,
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/simple-scan.git"
                }
            ]
        }
    ]
}
